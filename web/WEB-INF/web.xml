<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<listener>
		<listener-class>com.jones.matt.scheduler.Scheduler</listener-class>
	</listener>
	<servlet>
		<servlet-name>X10Servlet</servlet-name>
		<servlet-class>com.jones.matt.lights.HubServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>X10Servlet</servlet-name>
		<url-pattern>/X/*</url-pattern>
		<url-pattern>/G/*</url-pattern>
		<url-pattern>/H/*</url-pattern>
		<url-pattern>/LivingRoom/*</url-pattern>
		<url-pattern>/BathRoom/*</url-pattern>
		<url-pattern>/AllLights/*</url-pattern>
		<url-pattern>/Weather/*</url-pattern>
	</servlet-mapping>

</web-app>
