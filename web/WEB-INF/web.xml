<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<listener>
		<listener-class>com.jones.matt.scheduler.Scheduler</listener-class>
	</listener>
	<listener>
		<listener-class>com.jones.matt.lights.SceneStatusDao</listener-class>
	</listener>
	<servlet>
		<servlet-name>LightServlet</servlet-name>
		<servlet-class>com.jones.matt.lights.servlets.HubServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogServlet</servlet-name>
		<servlet-class>com.jones.matt.lights.servlets.LogServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReloadServlet</servlet-name>
		<servlet-class>com.jones.matt.lights.servlets.LoadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SceneStatusServlet</servlet-name>
		<servlet-class>com.jones.matt.lights.servlets.SceneStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LightServlet</servlet-name>
		<url-pattern>/S/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SceneStatusServlet</servlet-name>
		<url-pattern>/SceneStatus</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogServlet</servlet-name>
		<url-pattern>/Logs</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReloadServlet</servlet-name>
		<url-pattern>/Reload</url-pattern>
	</servlet-mapping>
</web-app>
